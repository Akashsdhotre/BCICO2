<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.akashsdhotre.bcico2.RegisterActivity"
    android:orientation="vertical">

    <!--<include layout="@layout/register_app_bar"/>-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false">




        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register to BCICO.IN"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="@color/edittextcolor"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/textcolor"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:weightSum="2"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/firstNameLayout"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.90"
                    android:background="@drawable/edittext_animation">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/registerFnameEt"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:hint="First Name"
                        android:textSize="15sp"
                        android:paddingLeft="20dp"
                        android:textColorHint="@color/textcolor"
                        />
                </android.support.design.widget.TextInputLayout>


                <View
                    android:layout_width="10dp"
                    android:layout_height="1dp"
                    android:layout_weight="0.20" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/lastNameLayout"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.90"
                    android:background="@drawable/edittext_animation">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/registerLnameEt"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:hint="Last Name"
                        android:textSize="15sp"
                        android:paddingLeft="20dp"
                        android:textColorHint="@color/textcolor"
                        />
                </android.support.design.widget.TextInputLayout>


            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/emailLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_animation"
                android:layout_marginTop="20dp"
                android:textColor="@color/textcolor">


                <android.support.design.widget.TextInputEditText
                    android:id="@+id/registerEmailEt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="20dp"
                    android:hint="Your Email"
                    android:textSize="15sp"
                    android:textColor="@color/edittextcolor"
                    android:textColorHint="@color/textcolor"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/passwordLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_animation"
                android:layout_marginTop="20dp"
                android:textColor="@color/textcolor">


                <android.support.design.widget.TextInputEditText
                    android:id="@+id/registerPasswordEt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="20dp"
                    android:hint="Your Password"
                    android:textSize="15sp"
                    android:textColor="@color/edittextcolor"
                    android:textColorHint="@color/textcolor"
                    android:inputType="textPassword"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/mnoLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_animation"
                android:layout_marginTop="20dp"
                android:textColor="@color/textcolor">


                <android.support.design.widget.TextInputEditText
                    android:id="@+id/registerMobileNoEt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="20dp"
                    android:hint="Your Mobile Number"
                    android:textSize="15sp"
                    android:textColor="@color/edittextcolor"
                    android:textColorHint="@color/textcolor"
                    android:inputType="phone"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/refferalLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_animation"
                android:layout_marginTop="20dp"
                android:textColor="@color/textcolor">


                <android.support.design.widget.TextInputEditText
                    android:id="@+id/registerReferralCodeEt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="20dp"
                    android:hint="Referral code"
                    android:textSize="15sp"
                    android:textColor="@color/edittextcolor"
                    android:textColorHint="@color/textcolor"/>

            </android.support.design.widget.TextInputLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="City"
                android:layout_marginTop="20dp"
                android:textColor="@color/textcolor"/>

            <Spinner
                android:id="@+id/registerCitySp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:background="@drawable/edittext_animation"
                android:textSize="15sp"
                android:textColor="@color/textcolor"
                android:textColorHint="@color/textcolor"
                android:entries="@array/cities"
                android:pointerIcon="hand"
                ></Spinner>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Interested In"
                android:layout_marginTop="20dp"
                android:textColor="@color/textcolor"/>

            <Spinner
                android:id="@+id/registerInterestsSp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:background="@drawable/edittext_animation"
                android:textSize="15sp"
                android:textColor="@color/textcolor"
                android:textColorHint="@color/textcolor"
                android:entries="@array/interests"
                ></Spinner>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I am"
                android:layout_marginTop="20dp"
                android:textColor="@color/textcolor"/>

            <Spinner
                android:id="@+id/registerIamSp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:background="@drawable/edittext_animation"
                android:text="Referral code"
                android:textSize="15sp"
                android:textColor="@color/textcolor"
                android:textColorHint="@color/textcolor"
                android:entries="@array/whoiam"></Spinner>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/registerCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accept The "
                    android:textColor="@color/textcolor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terms and Conditions "
                    android:textColor="@color/colorPrimaryDark"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="of the App"
                    android:textColor="@color/textcolor"
                    />

            </LinearLayout>


            <Button
                android:id="@+id/registerButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:layout_gravity="center"
                android:background="@drawable/button_animation"
                android:text="Complete Registration!"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:onClick="onRegisterButtonClicked"
                />


        </LinearLayout>
    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.akashsdhotre.bcico2.UploadActivity"
    android:paddingTop="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

             <ImageView
                 android:id="@+id/uploadProfile"
                 android:layout_width="40dp"
                 android:layout_height="40dp" />
             <EditText
                 android:id="@+id/uploadText"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
                 android:layout_marginLeft="8dp"
             android:hint="Type anything...."/>

        </LinearLayout>

        <ImageView
            android:paddingTop="8dp"
            android:id="@+id/viewImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"/>

    </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="500dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:weightSum="3">
            <LinearLayout
                android:id="@+id/linCamera"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/upload_button_animation"
                android:layout_weight="1">


                <TextView
                    android:id="@+id/uploadPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    android:text="@string/fas_fa_camera"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linVideo"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/upload_button_animation"
                android:layout_weight="1">



                <TextView
                    android:id="@+id/uploadVideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    android:text="@string/fas_fa_video"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/upload_button_animation"
                android:layout_weight="1">


                <Button
                    android:id="@+id/post"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Post"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"
                    android:background="@drawable/upload_button_animation"/>
            </LinearLayout>


    </LinearLayout>



</RelativeLayout>
